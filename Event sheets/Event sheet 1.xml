        <event-group collapsed="1" description="" title="Enemies">
            <sub-events>
                <event-block>
                    <conditions>
                        <condition id="0" name="On collision with another object" type="Enemy">
                            <param id="0" name="Object">Shot</param>
                        </condition>
                    </conditions>
                    <actions>
                        <action id="-9" name="Destroy" type="Enemy" />
