<?xml version="1.0" encoding="utf-8" ?>
<c2eventsheet>
    <!--All the 'name' attributes are ignored by Construct 2 - they are there for readability only.-->
    <name>Event sheet 1</name>
    <events>
        <variable constant="1" name="SAFERADIUS" static="0" type="number">96</variable>
        <variable constant="0" name="lastKillTime" static="0" type="number">0</variable>
        <variable constant="0" name="multiplier" static="0" type="number">1</variable>
        <variable constant="0" name="score" static="0" type="number">0</variable>
        <event-group description="" title="Wave start">
            <sub-events>
                <event-block>
                    <conditions>
                        <condition id="-2" name="On start of layout" type="System" />
                        <condition id="-11" name="For Each" type="System">
                            <param id="0" name="Object">Creep</param>
                        </condition>
                    </conditions>
                    <actions>
                        <action id="-3" name="Set position" type="Creep">
                            <param id="0" name="X">random(SAFERADIUS, sqrt(WindowWidth * WindowWidth + WindowHeight * WindowHeight))</param>
                            <param id="1" name="Y">random(0, 360)</param>
                        </action>
                        <action id="-3" name="Set position" type="Creep">
                            <param id="0" name="X">(WindowWidth * 1.5 + sin(Creep.Y) * Creep.X) % WindowWidth</param>
                            <param id="1" name="Y">(WindowHeight * 1.5 + cos(Creep.Y) * Creep.X) % WindowHeight</param>
                        </action>
                    </actions>
                </event-block>
            </sub-events>
        </event-group>
        <event-group collapsed="1" description="" title="Shooting">
            <sub-events>
                <event-block any="1">
                    <conditions>
                        <condition id="2" name="Key is down" type="Keyboard">
                            <param id="0" name="Key">87 (W)</param>
                        </condition>
                        <condition id="2" name="Key is down" type="Keyboard">
                            <param id="0" name="Key">83 (S)</param>
                        </condition>
                        <condition id="2" name="Key is down" type="Keyboard">
                            <param id="0" name="Key">65 (A)</param>
                        </condition>
                        <condition id="2" name="Key is down" type="Keyboard">
                            <param id="0" name="Key">68 (D)</param>
                        </condition>
                    </conditions>
                    <actions>
                        <action id="0" name="Spawn another object" type="Player">
                            <param id="0" name="Object">Shot</param>
                            <param id="1" name="Layer">0</param>
                            <param id="2" name="Image point">0</param>
                        </action>
                    </actions>
                    <sub-events>
                        <event-block>
                            <conditions>
                                <condition id="2" name="Key is down" type="Keyboard">
                                    <param id="0" name="Key">87 (W)</param>
                                </condition>
                            </conditions>
                            <actions />
                            <sub-events>
                                <event-block>
                                    <conditions>
                                        <condition id="2" name="Key is down" type="Keyboard">
                                            <param id="0" name="Key">65 (A)</param>
                                        </condition>
                                    </conditions>
                                    <actions>
                                        <action id="-8" name="Set angle" type="Shot">
                                            <param id="0" name="Angle">-135</param>
                                        </action>
                                    </actions>
                                </event-block>
                                <event-block>
                                    <conditions>
                                        <condition id="-22" name="Else" type="System" />
                                        <condition id="2" name="Key is down" type="Keyboard">
                                            <param id="0" name="Key">68 (D)</param>
                                        </condition>
                                    </conditions>
                                    <actions>
                                        <action id="-8" name="Set angle" type="Shot">
                                            <param id="0" name="Angle">-45</param>
                                        </action>
                                    </actions>
                                </event-block>
                                <event-block>
                                    <conditions>
                                        <condition id="-22" name="Else" type="System" />
                                    </conditions>
                                    <actions>
                                        <action id="-8" name="Set angle" type="Shot">
                                            <param id="0" name="Angle">-90</param>
                                        </action>
                                    </actions>
                                </event-block>
                            </sub-events>
                        </event-block>
                        <event-block>
                            <conditions>
                                <condition id="-22" name="Else" type="System" />
                                <condition id="2" name="Key is down" type="Keyboard">
                                    <param id="0" name="Key">83 (S)</param>
                                </condition>
                            </conditions>
                            <actions />
                            <sub-events>
                                <event-block>
                                    <conditions>
                                        <condition id="2" name="Key is down" type="Keyboard">
                                            <param id="0" name="Key">65 (A)</param>
                                        </condition>
                                    </conditions>
                                    <actions>
                                        <action id="-8" name="Set angle" type="Shot">
                                            <param id="0" name="Angle">135</param>
                                        </action>
                                    </actions>
                                </event-block>
                                <event-block>
                                    <conditions>
                                        <condition id="-22" name="Else" type="System" />
                                        <condition id="2" name="Key is down" type="Keyboard">
                                            <param id="0" name="Key">68 (D)</param>
                                        </condition>
                                    </conditions>
                                    <actions>
                                        <action id="-8" name="Set angle" type="Shot">
                                            <param id="0" name="Angle">45</param>
                                        </action>
                                    </actions>
                                </event-block>
                                <event-block>
                                    <conditions>
                                        <condition id="-22" name="Else" type="System" />
                                    </conditions>
                                    <actions>
                                        <action id="-8" name="Set angle" type="Shot">
                                            <param id="0" name="Angle">90</param>
                                        </action>
                                    </actions>
                                </event-block>
                            </sub-events>
                        </event-block>
                        <event-block>
                            <conditions>
                                <condition id="-22" name="Else" type="System" />
                                <condition id="2" name="Key is down" type="Keyboard">
                                    <param id="0" name="Key">65 (A)</param>
                                </condition>
                            </conditions>
                            <actions>
                                <action id="-8" name="Set angle" type="Shot">
                                    <param id="0" name="Angle">-180</param>
                                </action>
                            </actions>
                        </event-block>
                        <event-block>
                            <conditions>
                                <condition id="-22" name="Else" type="System" />
                                <condition id="2" name="Key is down" type="Keyboard">
                                    <param id="0" name="Key">68 (D)</param>
                                </condition>
                            </conditions>
                            <actions>
                                <action id="-8" name="Set angle" type="Shot">
                                    <param id="0" name="Angle">0</param>
                                </action>
                            </actions>
                        </event-block>
                    </sub-events>
                </event-block>
            </sub-events>
        </event-group>
        <event-group collapsed="1" description="" title="Grunt">
            <sub-events>
                <event-block>
                    <conditions>
                        <condition id="-1" name="Every tick" type="System" />
                    </conditions>
                    <actions>
                        <action id="-21" name="Rotate toward position" type="Grunt">
                            <param id="0" name="Degrees">Clamp((-Grunt.Sine.Value), 0, 1) * 3</param>
                            <param id="1" name="X">Player.X</param>
                            <param id="2" name="Y">Player.Y</param>
                        </action>
                        <action behavior="Bullet" id="0" name="Set speed" type="Grunt">
                            <param id="0" name="Speed">(1 + Grunt.Sine.Value) * 50</param>
                        </action>
                        <action behavior="Bullet" id="3" name="Set angle of motion" type="Grunt">
                            <param id="0" name="Angle">Grunt.Angle</param>
                        </action>
                        <action id="-5" name="Set width" type="Grunt">
                            <param id="0" name="Width">32 + Grunt.Sine.Value * 16</param>
                        </action>
                    </actions>
                </event-block>
                <event-block>
                    <conditions>
                        <condition id="0" name="On collision with another object" type="Grunt">
                            <param id="0" name="Object">Shot</param>
                        </condition>
                    </conditions>
                    <actions>
                        <action id="-9" name="Destroy" type="Grunt" />
                    </actions>
                </event-block>
                <event-block>
                    <conditions>
                        <condition id="0" name="On collision with another object" type="Grunt">
                            <param id="0" name="Object">Player</param>
                        </condition>
                    </conditions>
                    <actions>
                        <action id="-9" name="Destroy" type="Player" />
                        <action id="-9" name="Destroy" type="Grunt" />
                    </actions>
                </event-block>
                <event-block>
                    <conditions>
                        <condition id="-19" name="On destroyed" type="Grunt" />
                    </conditions>
                    <actions>
                        <action id="-10" name="Add to" type="System">
                            <param id="0" name="Variable">score</param>
                            <param id="1" name="Value">2000 * multiplier</param>
                        </action>
                        <action id="-10" name="Add to" type="System">
                            <param id="0" name="Variable">multiplier</param>
                            <param id="1" name="Value">0.2</param>
                        </action>
                        <action id="-9" name="Set value" type="System">
                            <param id="0" name="Variable">lastKillTime</param>
                            <param id="1" name="Value">time</param>
                        </action>
                    </actions>
                </event-block>
            </sub-events>
        </event-group>
        <event-group collapsed="1" description="" title="Creep">
            <sub-events>
                <event-block>
                    <conditions>
                        <condition id="0" name="On collision with another object" type="Creep">
                            <param id="0" name="Object">Shot</param>
                        </condition>
                    </conditions>
                    <actions>
                        <action id="-9" name="Destroy" type="Creep" />
                        <action id="-9" name="Destroy" type="Shot" />
                    </actions>
                </event-block>
                <event-block>
                    <conditions>
                        <condition id="0" name="On collision with another object" type="Creep">
                            <param id="0" name="Object">Player</param>
                        </condition>
                    </conditions>
                    <actions>
                        <action id="-9" name="Destroy" type="Player" />
                        <action id="-9" name="Destroy" type="Creep" />
                    </actions>
                </event-block>
                <event-block>
                    <conditions>
                        <condition id="-19" name="On destroyed" type="Creep" />
                    </conditions>
                    <actions>
                        <action id="0" name="Spawn another object" type="Creep">
                            <param id="0" name="Object">CreepExplosion</param>
                            <param id="1" name="Layer">0</param>
                            <param id="2" name="Image point">0</param>
                        </action>
                        <action id="-10" name="Add to" type="System">
                            <param id="0" name="Variable">score</param>
                            <param id="1" name="Value">1000 * multiplier</param>
                        </action>
                        <action id="-10" name="Add to" type="System">
                            <param id="0" name="Variable">multiplier</param>
                            <param id="1" name="Value">0.2</param>
                        </action>
                        <action id="-9" name="Set value" type="System">
                            <param id="0" name="Variable">lastKillTime</param>
                            <param id="1" name="Value">time</param>
                        </action>
                    </actions>
                </event-block>
                <event-block>
                    <conditions>
                        <condition id="-6" name="Every X seconds" type="System">
                            <param id="0" name="Interval (seconds)">0.2</param>
                        </condition>
                    </conditions>
                    <actions>
                        <action id="0" name="Spawn another object" type="Sprite">
                            <param id="0" name="Object">Creep</param>
                            <param id="1" name="Layer">0</param>
                            <param id="2" name="Image point">0</param>
                        </action>
                    </actions>
                </event-block>
            </sub-events>
        </event-group>
        <event-group collapsed="1" description="" title="Spirosnipe">
            <sub-events>
                <event-block>
                    <conditions>
                        <condition id="-1" name="Every tick" type="System" />
                    </conditions>
                    <actions>
                        <action id="-22" name="Set angle toward position" type="Spirosnipe">
                            <param id="0" name="X">Player.X</param>
                            <param id="1" name="Y">Player.Y</param>
                        </action>
                        <action behavior="Aroundment" id="3" name="Set angle of motion" type="Spirosnipe">
                            <param id="0" name="Angle">SpiroSnipe.Angle + 90</param>
                        </action>
                        <action behavior="Inment" id="0" name="Set speed" type="Spirosnipe">
                            <param id="0" name="Speed">distance(Player.X, Player.Y, Spirosnipe.X, Spirosnipe.Y) * 0.5</param>
                        </action>
                    </actions>
                </event-block>
                <event-block>
                    <conditions>
                        <condition id="-8" name="Compare two values" type="System">
                            <param id="0" name="First value">Spirosnipe.Clock.Value</param>
                            <param id="1" name="Comparison">4</param>
                            <param id="2" name="Second value">0</param>
                        </condition>
                        <condition id="-4" name="Trigger once while true" type="System" />
                    </conditions>
                    <actions>
                        <action id="0" name="Spawn another object" type="Spirosnipe">
                            <param id="0" name="Object">Spiroshot</param>
                            <param id="1" name="Layer">0</param>
                            <param id="2" name="Image point">0</param>
                        </action>
                        <action behavior="Bullet" id="3" name="Set angle of motion" type="Spiroshot">
                            <param id="0" name="Angle">Spirosnipe.Angle</param>
                        </action>
                    </actions>
                </event-block>
                <event-block>
                    <conditions>
                        <condition id="0" name="On collision with another object" type="Spirosnipe">
                            <param id="0" name="Object">Player</param>
                        </condition>
                    </conditions>
                    <actions>
                        <action id="-9" name="Destroy" type="Player" />
                        <action id="-9" name="Destroy" type="Spirosnipe" />
                    </actions>
                </event-block>
                <event-block>
                    <conditions>
                        <condition id="0" name="On collision with another object" type="Spiroshot">
                            <param id="0" name="Object">Player</param>
                        </condition>
                    </conditions>
                    <actions>
                        <action id="-9" name="Destroy" type="Player" />
                        <action id="-9" name="Destroy" type="Spiroshot" />
                    </actions>
                </event-block>
                <event-block>
                    <conditions>
                        <condition id="0" name="On collision with another object" type="Spirosnipe">
                            <param id="0" name="Object">Shot</param>
                        </condition>
                    </conditions>
                    <actions>
                        <action id="-9" name="Destroy" type="Spirosnipe" />
                    </actions>
                </event-block>
            </sub-events>
        </event-group>
        <event-group description="" title="Score">
            <sub-events>
                <event-block>
                    <conditions>
                        <condition id="-2" name="On start of layout" type="System" />
                    </conditions>
                    <actions>
                        <action id="5" name="Set web font" type="Score">
                            <param id="0" name="Family name">&quot;Adore64&quot;</param>
                            <param id="1" name="CSS URL">&quot;webfont.css&quot;</param>
                        </action>
                        <action id="5" name="Set web font" type="MultiplierPopup">
                            <param id="0" name="Family name">&quot;Adore64&quot;</param>
                            <param id="1" name="CSS URL">&quot;webfont.css&quot;</param>
                        </action>
                    </actions>
                </event-block>
                <event-block>
                    <conditions>
                        <condition id="-1" name="Every tick" type="System" />
                    </conditions>
                    <actions>
                        <action id="0" name="Set text" type="Score">
                            <param id="0" name="Text">zeropad(floor(score), 8)</param>
                        </action>
                        <action id="0" name="Set text" type="Multiplier">
                            <param id="0" name="Text">multiplier</param>
                        </action>
                    </actions>
                </event-block>
                <event-block>
                    <conditions>
                        <condition id="-8" name="Compare two values" type="System">
                            <param id="0" name="First value">time</param>
                            <param id="1" name="Comparison">4</param>
                            <param id="2" name="Second value">lastKillTime + 1</param>
                        </condition>
                    </conditions>
                    <actions>
                        <action id="-9" name="Set value" type="System">
                            <param id="0" name="Variable">multiplier</param>
                            <param id="1" name="Value">1</param>
                        </action>
                        <action id="-10" name="Set value" type="MultiplierPopup">
                            <param id="0" name="Instance variable">lastShown</param>
                            <param id="1" name="Value">1</param>
                        </action>
                    </actions>
                </event-block>
                <event-block>
                    <conditions>
                        <condition id="-8" name="Compare two values" type="System">
                            <param id="0" name="First value">floor(multiplier)</param>
                            <param id="1" name="Comparison">4</param>
                            <param id="2" name="Second value">MultiplierPopup.lastShown</param>
                        </condition>
                    </conditions>
                    <actions>
                        <action id="-10" name="Set value" type="MultiplierPopup">
                            <param id="0" name="Instance variable">lastShown</param>
                            <param id="1" name="Value">floor(multiplier)</param>
                        </action>
                        <action id="0" name="Set text" type="MultiplierPopup">
                            <param id="0" name="Text">&quot;x&quot; &amp; floor(multiplier)</param>
                        </action>
                        <action behavior="Fade" id="0" name="Restart fade" type="MultiplierPopup" />
                        <action id="-15" name="Set visible" type="MultiplierPopup">
                            <param id="0" name="Visibility">1</param>
                        </action>
                        <action id="3" name="Set font size" type="MultiplierPopup">
                            <param id="0" name="Size (pt)">30 + (floor(multiplier) * 10)</param>
                        </action>
                    </actions>
                </event-block>
            </sub-events>
        </event-group>
    </events>
</c2eventsheet>
