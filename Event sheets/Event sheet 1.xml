<?xml version="1.0" encoding="utf-8" ?>
<c2eventsheet>
    <!--All the 'name' attributes are ignored by Construct 2 - they are there for readability only.-->
    <name>Event sheet 1</name>
    <events>
        <variable constant="1" name="MULTIPLIER_INCREMENT" static="0" type="number">1</variable>
        <variable constant="1" name="SAFERADIUS" static="0" type="number">128</variable>
        <variable constant="0" name="lastKillTime" static="0" type="number">0</variable>
        <variable constant="0" name="multiplier" static="0" type="number">1</variable>
        <variable constant="0" name="score" static="0" type="number">0</variable>
        <event-group collapsed="1" description="" title="Wave start">
            <sub-events>
                <event-block>
                    <conditions>
                        <condition id="-2" name="On start of layout" type="System" />
                    </conditions>
                    <actions />
                    <sub-events>
                        <event-block>
                            <conditions>
                                <condition id="-11" name="For Each" type="System">
                                    <param id="0" name="Object">Enemy</param>
                                </condition>
                            </conditions>
                            <actions>
                                <action id="-3" name="Set position" type="Enemy">
                                    <param id="0" name="X">random(SAFERADIUS, sqrt(WindowWidth * WindowWidth + WindowHeight * WindowHeight) * 0.5)</param>
                                    <param id="1" name="Y">random(0, 360)</param>
                                </action>
                                <action id="-3" name="Set position" type="Enemy">
                                    <param id="0" name="X">(WindowWidth * 1.5 + sin(Enemy.Y) * Enemy.X) % WindowWidth</param>
                                    <param id="1" name="Y">(WindowHeight * 1.5 + cos(Enemy.Y) * Enemy.X) % WindowHeight</param>
                                </action>
                            </actions>
                        </event-block>
                    </sub-events>
                </event-block>
                <event-block>
                    <conditions>
                        <condition id="-11" name="For Each" type="System">
                            <param id="0" name="Object">Creep</param>
                        </condition>
                    </conditions>
                    <actions>
                        <action id="-10" name="Set value" type="Creep">
                            <param id="0" name="Instance variable">value</param>
                            <param id="1" name="Value">1000</param>
                        </action>
                    </actions>
                </event-block>
                <event-block>
                    <conditions>
                        <condition id="-11" name="For Each" type="System">
                            <param id="0" name="Object">Grunt</param>
                        </condition>
                    </conditions>
                    <actions>
                        <action id="-10" name="Set value" type="Grunt">
                            <param id="0" name="Instance variable">value</param>
                            <param id="1" name="Value">2000</param>
                        </action>
                    </actions>
                </event-block>
                <event-block>
                    <conditions>
                        <condition id="-11" name="For Each" type="System">
                            <param id="0" name="Object">Spirosnipe</param>
                        </condition>
                    </conditions>
                    <actions>
                        <action id="-10" name="Set value" type="Spirosnipe">
                            <param id="0" name="Instance variable">value</param>
                            <param id="1" name="Value">4000</param>
                        </action>
                    </actions>
                </event-block>
                <event-block>
                    <conditions>
                        <condition id="-11" name="For Each" type="System">
                            <param id="0" name="Object">Wrecksagon</param>
                        </condition>
                    </conditions>
                    <actions>
                        <action id="-10" name="Set value" type="Wrecksagon">
                            <param id="0" name="Instance variable">value</param>
                            <param id="1" name="Value">3000</param>
                        </action>
                    </actions>
                </event-block>
            </sub-events>
        </event-group>
