                    <conditions>
                        <condition id="0" name="On collision with another object" type="Enemy">
                            <param id="0" name="Object">Player</param>
                        </condition>
                    </conditions>
                    <actions>
                        <action id="-9" name="Destroy" type="Player" />
                        <action id="-9" name="Destroy" type="Enemy" />
                    </actions>
                </event-block>
            </sub-events>
