        <event-group collapsed="1" description="" title="Score">
            <sub-events>
                <event-block>
                    <conditions>
                        <condition id="-2" name="On start of layout" type="System" />
                    </conditions>
                    <actions>
                        <action id="5" name="Set web font" type="Score">
                            <param id="0" name="Family name">&quot;Adore64&quot;</param>
                            <param id="1" name="CSS URL">&quot;webfont.css&quot;</param>
                        </action>
                        <action id="5" name="Set web font" type="MultiplierPopup">
                            <param id="0" name="Family name">&quot;Adore64&quot;</param>
                            <param id="1" name="CSS URL">&quot;webfont.css&quot;</param>
                        </action>
                        <action id="0" name="Set text" type="MultiplierPopup">
                            <param id="0" name="Text">&quot;&quot;</param>
                        </action>
                        <action id="-15" name="Set visible" type="MultiplierPopup">
                            <param id="0" name="Visibility">1</param>
                        </action>
                    </actions>
                </event-block>
                <event-block>
                    <conditions>
                        <condition id="-1" name="Every tick" type="System" />
                    </conditions>
                    <actions>
                        <action id="0" name="Set text" type="Score">
                            <param id="0" name="Text">zeropad(floor(score), 8)</param>
                        </action>
                        <action id="0" name="Set text" type="Multiplier">
                            <param id="0" name="Text">multiplier</param>
                        </action>
                    </actions>
                </event-block>
                <event-block>
                    <conditions>
                        <condition id="-8" name="Compare two values" type="System">
                            <param id="0" name="First value">time</param>
                            <param id="1" name="Comparison">4</param>
                            <param id="2" name="Second value">lastKillTime + 1</param>
                        </condition>
                    </conditions>
                    <actions>
                        <action id="-9" name="Set value" type="System">
                            <param id="0" name="Variable">multiplier</param>
                            <param id="1" name="Value">1</param>
                        </action>
                        <action id="-10" name="Set value" type="MultiplierPopup">
                            <param id="0" name="Instance variable">lastShown</param>
                            <param id="1" name="Value">1</param>
                        </action>
                    </actions>
                </event-block>
                <event-block>
                    <conditions>
                        <condition id="-8" name="Compare two values" type="System">
                            <param id="0" name="First value">floor(multiplier)</param>
                            <param id="1" name="Comparison">4</param>
                            <param id="2" name="Second value">MultiplierPopup.lastShown</param>
                        </condition>
                    </conditions>
                    <actions>
                        <action id="-10" name="Set value" type="MultiplierPopup">
                            <param id="0" name="Instance variable">lastShown</param>
                            <param id="1" name="Value">floor(multiplier)</param>
                        </action>
                        <action id="0" name="Set text" type="MultiplierPopup">
                            <param id="0" name="Text">&quot;x&quot; &amp; floor(multiplier)</param>
                        </action>
                        <action behavior="Fade" id="0" name="Restart fade" type="MultiplierPopup" />
                        <action id="-15" name="Set visible" type="MultiplierPopup">
                            <param id="0" name="Visibility">1</param>
                        </action>
                        <action id="3" name="Set font size" type="MultiplierPopup">
                            <param id="0" name="Size (pt)">30 + (floor(multiplier) * 10)</param>
                        </action>
                    </actions>
                </event-block>
            </sub-events>
        </event-group>
        <event-group description="" title="Border">
            <sub-events>
                <variable constant="1" name="START_SIZE" static="0" type="number">72</variable>
                <variable constant="1" name="END_SIZE" static="0" type="number">24</variable>
                <variable constant="1" name="TRAVEL" static="0" type="number">128</variable>
                <event-block>
                    <conditions>
                        <condition id="-2" name="On start of layout" type="System" />
                    </conditions>
                    <actions>
                        <action id="-3" name="Create object" type="System">
                            <param id="0" name="Object to create">Border</param>
                            <param id="1" name="Layer">1</param>
                            <param id="2" name="X">-START_SIZE * 0.5</param>
                            <param id="3" name="Y">WindowHeight * 0.5</param>
                        </action>
                        <action id="2" name="Stop" type="Border" />
                    </actions>
                </event-block>
                <event-block>
                    <conditions>
                        <condition behavior="Sawtooth" id="0" name="Is active" type="Border" />
                    </conditions>
                    <actions>
                        <action id="-3" name="Set position" type="Border">
                            <param id="0" name="X">-START_SIZE * 0.5 + (0.5 + Border.Sawtooth.Value) * TRAVEL</param>
                            <param id="1" name="Y">Border.Y</param>
                        </action>
                        <action id="-5" name="Set width" type="Border">
                            <param id="0" name="Width">END_SIZE + (0.5 - Border.Sawtooth.Value) * (START_SIZE - END_SIZE)</param>
                        </action>
                        <action id="-16" name="Set opacity" type="Border">
                            <param id="0" name="Opacity">(0.5 - Border.Sawtooth.Value) * 100</param>
                        </action>
                    </actions>
                </event-block>
            </sub-events>
        </event-group>
    </events>
